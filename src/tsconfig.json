{
    "compilerOptions": {
        "module": "commonjs",
        "target": "ES2016",
        "lib": [
            "es2017","es2016","es2015","es6"
           ],
        "allowJs": false,
        "noImplicitAny": false,
        "moduleResolution": "node",
        "sourceMap": false,
        "outDir": "dist",
        "baseUrl": ".",
        "paths": {
            "*": ["node_modules/*"]
        }
    },

    "include": [
        "**/*.ts"
    ],

    "exclude": [
        "node_modules"
       ]
}